  "license": "GNU APGLv3",
  "private": true,
  "workspaces": [
    "backend",
    "data",
    "frontend"
  ],
  "scripts": {
    "dev": "yarn workspace @xstocks/frontend dev & yarn workspace @xstocks/backend develop",
    "eslint": "eslint --fix \"./**/*.@(j|t)s?(x)\"",
